<head>
  <style>
    .card {
      animation: slideIn 1s cubic-bezier(0.25, 1, 0.5, 1) forwards;
    }
     
    @keyframes slideIn {
      0% {
        transform: translateX(180px);
        opacity: 0;
      }
      100% {
        transform: translateX(0);
      }
      40%,100% {
        opacity: 1;
      }
    }
  </style>
</head>




<div class="card-list-container py-5">
  <% @posts.sort_by(&:created_at).reverse.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
        <% if post.get_image.present? %>
          <%= image_tag post.get_image %>
        <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <p><%= image_tag post.user.get_profile_image(100,100), style: "border-radius: 50%;" %></p>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <strong><p>ユーザーネーム：<%= link_to post.user.name, user_user_path(post.user) %></p></strong>
                </p>
                <p class="card-title">
                  <%= link_to user_post_path(post.id) do %>
                    <p>タイトル：<%= post.title %></p>
                  <% end %>
                </p>
                <p class="card-text">内容：<%= post.body %></p>
                
                <% if post.favorited_by?(current_user) %>
                  <p>
                    <%= link_to user_post_favorite_path(post), method: :delete do %>
                      ♥<%= post.favorites.count %> いいね
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <%= link_to user_post_favorite_path(post), method: :post do %>
                      ♡<%= post.favorites.count %> いいね
                    <% end %>
                  </p>
                <% end %>
                <p><%= link_to "#{post.post_comments.count} コメント", user_post_path(post.id) %></p>
              </div>
            </div>
          </div>    
    </div>
  <% end %>
</div>