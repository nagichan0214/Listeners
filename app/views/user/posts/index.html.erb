<div class="card-list-container py-5">
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
        <% if post.get_image.present? %>
          <%= image_tag post.get_image %>
        <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <strong><p>ユーザーネーム：<%= link_to post.user.name, user_user_path(post.user) %></p></strong>
                </p>
                <p class="card-title">
                  <%= link_to user_post_path(post.id) do %>
                    <p>タイトル：<%= post.title %></p>
                  <% end %>
                </p>
                <p class="card-text">内容：<%= post.body %></p>
                <p><%= link_to "#{post.post_comments.count} コメント", user_post_path(post.id) %></p>
              </div>
            </div>
          </div>    
    </div>
  <% end %>
</div>