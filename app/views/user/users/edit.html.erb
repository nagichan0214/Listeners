<h2>プロフィール編集</h2>
<%= form_with(model: @user, url: user_user_path(@user.id), method: :patch) do |form| %>
  <div>
    <label for="inputName">Name</label>
    <%= form.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div>
  <label for="inputIntroduction">自己紹介</label>
  <%= form.text_area :introduction, id: "inputIntroduction", placeholder: "自己紹介を追加する" %>
  </div>
  <div>
    <label for="inputImage">ProfileImage</label>
    <%= form.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  
  <div>
    <%= form.submit "変更を保存" %>
  </div>
<% end %>